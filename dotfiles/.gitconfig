[core]
	quotepath = false
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RX
[color]
	ui = auto

[include]
	path = configs/includes/.gitconfig-alias

[includeIf "gitdir:~/"]
	path = configs/includes/.gitconfig-personal

[includeIf "gitdir:**/liferay/"]
	path = configs/includes/.gitconfig-work
